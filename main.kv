#:import math math

<LayoutWidget>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: display
            size_hint_y: None
            height: '100dp'
            font_size: 80
            text: ''  #this will have to become a scroll view item
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'
            Button:
                text: '+'
                font_size: 20
                size_hint_y: 1
                on_release: display.text += '+'
            Button:
                text: '-'
                font_size: 20
                size_hint_y: 1
                on_release: display.text += '-'
            Button:
                text: '/'
                font_size: 20
                size_hint_y: 1
                on_release: display.text += '/'
            Button:
                text: '*'
                font_size: 20
                size_hint_y: 1
                on_release: display.text += '*'
            Button:
                text: '^'
                font_size: 20
                size_hint_y: 1
                on_release: display.text += '^'
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'
            Button:
                text: 'log'
                font_size: 20
                size_hint_y: 1
            Button:
                text: 'ln'
                font_size: 20
                size_hint_y: 1
            Button:
                text: 'e'
                font_size: 20
                size_hint_y: 1
                on_release: display.text += str(math.e)
            Button:
                text: 'mod'
                font_size: 20
                size_hint_y: 1
                on_release: display.text += '%'
            Button:
                text: '!'
                font_size: 20
                size_hint_y: 1

        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                size_hint_y: 1
                Button:
                    text: '('
                    font_size: 20
                    size_hint_y: 1
                    on_release: display.text += '('
                Button:
                    text: ')'
                    font_size: 20
                    size_hint_y: 1
                    on_release: display.text += ')'
                Button:
                    text: '.'
                    font_size: 20
                    size_hint_y: 1
                    on_release: display.text += '.'
                Button:
                    text: 's'
                    font_size: 20
                    size_hint_y: 1
                    on_release: display.text += 's'

            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    Button:
                        text: '1'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '1'
                    Button:
                        text: '2'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '2'
                    Button:
                        text: '3'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '3'
                BoxLayout:
                    Button:
                        text: '4'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '4'
                    Button:
                        text: '5'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '5'
                    Button:
                        text: '6'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '6'
                BoxLayout:
                    Button:
                        text: '7'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '7'
                    Button:
                        text: '8'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '8'
                    Button:
                        text: '9'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '9'
                BoxLayout:
                    BoxLayout:
                        orientation: 'vertical'
                        Button:
                            text: 'del'
                            font_size: 20
                            size_hint_y: 1
                            on_release: display.text = display.text[:-1]
                        Button:
                            text: 'C'
                            font_size: 20
                            size_hint_y: 1
                            on_release: display.text = ''
                    Button:
                        text: '0'
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text += '0'
                    Button:
                        text: '='
                        font_size: 20
                        size_hint_y: 1
                        on_release: display.text = root.evaluate(display.text)


